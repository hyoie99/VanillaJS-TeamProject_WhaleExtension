{
  "manifest_version": 2,
  "name": "글마카세",
  "version": "1.0.0",

  "description": "확장앱 설명",

  "sidebar_action": {
    "default_page": "html/sideToday.html",
    "default_title": "글마카세"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "chrome_url_overrides": {
    "newtab": "html/main.html"
  },
  "permissions": ["tabs", "pageCapture"],
  "web_accessible_resources": ["json/*.json", "css/*.css"]
}
