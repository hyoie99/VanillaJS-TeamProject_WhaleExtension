{
  "manifest_version": 3,
  "name": "글마카세",
  "version": "1.0.0",

  "description": "매일 내게 맞는 글을 맛볼 수 있는 글마카세",
  "icons": {
    "128": "img/icon/logo.png"
  },

  "sidebar_action": {
    "default_page": "html/sideToday.html",
    "default_title": "글마카세",
    "default_icon": {
      "128": "img/icon/logo.png"
    }
  },
  "background": { "service_worker": "js/background.js" },
  "chrome_url_overrides": {
    "newtab": "html/main.html"
  },
  "permissions": ["tabs"]
}
